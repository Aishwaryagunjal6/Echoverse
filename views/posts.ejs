<%- include('partials/header', { title, user: user }) %>

<div class="container py-4">
  <div class="text-center mb-5">
    <h1 class="display-6 fw-bold text-primary mb-3">ðŸ“š Latest Posts</h1>
    <p class="lead text-muted">Community shared stories and ideas</p>
  </div>

  <% if(posts?.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5 ">
      <% posts.forEach(post => { %>
        <div class="col">
          <div class="card h-100 shadow-sm ">
            <% if(post.images && post.images.length > 0) { %>
              <img src="<%= post.images[0].url %>" class="card-img-top" alt="Post image" style="height: 200px; object-fit: cover;">
            <% } %>

            <div class="card-body">
              <h5 class="card-title text-truncate"><%= post.title %></h5>
              <p class="card-text text-muted mb-3 line-clamp-3"><%= post.content %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <small class="text-primary fw-medium"><%= post.author.username %></small>
                  <br>
                  <small class="text-muted"><%= post.createdAt.toDateString() %></small>
                </div>
                <a href="/posts/<%= post._id %>" class="btn btn-sm btn-outline-primary">View â†’</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center py-5">
      <div class="py-5">
        <i class="bi bi-file-earmark-text fs-1 text-muted mb-3"></i>
        <p class="text-muted lead">No posts found</p>
      </div>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>